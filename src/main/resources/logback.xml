<configuration>
	　　　
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%blue(%file) %L %d{HH:mm:ss.SSS} [%thread] %-5level %logger{20} - [%method,%line] %msg%n
			</pattern>　　
		</encoder>
	</appender>

	<logger name="e" level="DEBUG" additivity="false">
		<appender-ref ref="STDOUT"/>
	</logger>
	　　　
<!--	<root level="DEBUG">-->
<!--		<appender-ref ref="STDOUT"/>-->
<!--	</root>-->
</configuration>